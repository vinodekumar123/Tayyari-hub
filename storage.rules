rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Community folder rules
    match /community/{userId}/{allPaths=**} {
      // Allow any authenticated user to view community images
      allow read: if request.auth != null;
      // Allow users to upload/delete only their own images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
